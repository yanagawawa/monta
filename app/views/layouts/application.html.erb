<!DOCTYPE html>
<html>
  <head>
    <title>monta</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= include_gon %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     <%= favicon_link_tag('favicon.ico') %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
          <%= link_to root_path do %>
          <%= image_tag 'monta.logo.png', size: '300x60' %>
          <% end %>
        </div>
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <% if user_signed_in? %>
            <li>ユーザー</li>
            <li><%= link_to "アバウト", about_path, class: "text-white" %></li>
            <li><%= link_to "マイページ", user_path(current_user.id), class: "text-white" %></li>
            <li><%= link_to "レッスン一覧", lessons_path, class: "text-white" %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "text-white" %></li>
          <% elsif trainer_signed_in? %>
            <li>トレーナー</li>
            <li><%= link_to "アバウト",  trainer_about_path, class: "text-white" %></li>
            <li><%= link_to "マイページ", trainer_trainer_path(current_trainer.id), class: "text-white" %></li>
            <li><%= link_to "ログアウト", destroy_trainer_session_path, method: :delete, class: "text-white" %></li>
            <li><%= link_to "レッスンALL", lessons_path, class: "text-white" %></li>
          <% else %>
            <li>ユーザー</li>
            <li><%= link_to "アバウト", about_path, class: "text-white" %></li>
            <li><%= link_to "レッスン一覧", lessons_path, class: "text-white" %></li>
            <li><%= link_to "新規登録", new_user_registration_path, class: "text-white" %></li>
            <li><%= link_to "ログイン", new_user_session_path, class: "text-white" %></li>
            <li><%= link_to "トレーナー", trainer_about_path, class: "text-white" %></li>
          <% end %>
        </ul>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer class="pt-5 pb-4">
      <div class="container">
        <div class="text-center text-white">CopyRight Yanagawa</div>
       </div>
    </footer>

  </body>
</html>
