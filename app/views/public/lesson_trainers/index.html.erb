<div class="row">

    <%= render'public/users/sidebar', current_user: @user %>
    <div class="col-8">
      <h2 class="mt-3 text-center">フォロートレーナー 一覧</h2>
      <div class="row">
      <% @trainers.each do |trainer| %>

          <div class="col-4 mt-3">
            <div class="text-center">
              <%= link_to lesson_trainer_path(trainer.id) do %>
                  <%= attachment_image_tag trainer, :profile_image, :fill, 150, 150, format: 'jpeg', fallback: "no_image.jpg",size: "150x150" %>
              <% end %>
            </div>
            <div class="text-center"><%= trainer.last_name %><%= trainer.first_name %></div>
          </div>

      <% end %>
    </div>
    </div>
</div>