<div class="row">

    <%= render 'public/lessons/search', search_params: @search_params %>
    <div class="col-8 my-5 text-center">

      <p id="notice"><%= notice %></p>

      <ul class="nav nav-tabs" role="tablist"  style="justify-content: center;">
        <li class="nav-item">
          <a class="nav-link active" id="lesson1-tab" data-toggle="tab" href="#lesson1" role="tab" aria-controls="lesson1" aria-selected="true">ALL</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="lesson2-tab" data-toggle="tab" href="#lesson2" role="tab" aria-controls="lesson2" aria-selected="false">対面</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="lesson3-tab" data-toggle="tab" href="#lesson3" role="tab" aria-controls="lesson3" aria-selected="false">パーソナル(対面)</a>
        </li>
