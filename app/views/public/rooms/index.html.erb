<div class="row">
  <% if user_signed_in? %>

      <% elsif trainer_signed_in? %>
      <%= render'trainer/trainers/sidebar', current_trainer: @trainer %>
      <% end %>
   <div class="col-8">

<% @rooms.each do |room| %>
    <% if current_user.present? %>
      <%= link_to room_path(room.id) do %>
          <%= room.trainer.last_name %>
          <%= room.trainer.first_name %>
          <%= link_to "×", room_path(room), method: :delete %>
          <% if @messages.count != 0 %>
            <%= @messages.count %>
          <% end %>

      <% end %>
    <% elsif current_trainer.present? %>
        <%= link_to room_path(room.id) do %>
          <%= room.user.last_name %>
          <%= room.user.first_name %>
          <%= link_to "×", room_path(room), method: :delete %>
          <% if @messages != 0 %>
            <%= @messages.count %>
          <% end %>
        <% end %>
    <% end %>
<% end %>
</div>
</div>