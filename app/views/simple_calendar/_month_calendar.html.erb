<div class="simple-calendar">
  <div class="calendar-heading text-center">
    <h2><span class="calendar-title"> <%= start_date.year %>年<h1><%= t('date.month_names')[start_date.month] %></h1></span></h2>
  </div>
  <div class="container">
    <div class="row">
      <div class="col text-left"><%= link_to t('simple_calendar.previous', default: '←先月'), calendar.url_for_previous_view %></div>
      <div class="col text-right"><%= link_to t('simple_calendar.next', default: '次月→'), calendar.url_for_next_view %></div>
    </div>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
                <% passed_block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
